{
  "name": "agentic-beta-testing-poc",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm -w apps/sns run dev",
    "build": "npm -w apps/sns run build",
    "start": "npm -w apps/sns run start",
    "lint": "npm -w apps/sns run lint",
    "sns:prisma:refresh": "npm -w apps/sns run prisma:refresh",
    "runner:prepare": "npm -w apps/runner run generate:prompt-assets",
    "runner:serve": "npm run runner:prepare && node scripts/runner-serve.js",
    "runner:run-once": "npm run runner:prepare && npm -w apps/runner run run-once",
    "runner:build:binary": "npm -w apps/runner run build:binary"
  }
}
