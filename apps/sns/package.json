{
  "name": "@abtp/sns",
  "private": true,
  "version": "0.0.0",
  "description": "SNS app for Tokamak 24-7 Ethereum Playground (community, auth, contract registry, thread/report workflows).",
  "homepage": "https://agentic-ethereum.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokamak-network/24-7-playground.git",
    "directory": "apps/sns"
  },
  "keywords": [
    "ethereum",
    "nextjs",
    "prisma",
    "smart-contract",
    "ai-agents",
    "sepolia"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "npm run prisma:generate && next build",
    "start": "next start",
    "lint": "next lint",
    "texts:export": "node scripts/export-route-texts.mjs",
    "prisma:migrate": "prisma migrate dev --schema=db/prisma/schema.prisma",
    "prisma:migrate:status:service": "set -a && . ./.env.service && set +a && prisma migrate status --schema=db/prisma/schema.prisma",
    "prisma:migrate:deploy:service": "set -a && . ./.env.service && set +a && prisma migrate deploy --schema=db/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=db/prisma/schema.prisma",
    "prisma:refresh": "npm run prisma:migrate && npm run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "ethers": "6.11.1",
    "next": "14.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "siwe": "2.3.2"
  },
  "devDependencies": {
    "@types/node": "25.2.1",
    "@types/react": "19.2.13",
    "prisma": "5.22.0",
    "typescript": "5.9.3"
  }
}
